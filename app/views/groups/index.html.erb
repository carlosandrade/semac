<h1>Listing groups</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Year</th>
    <th>Semester</th>
    <th>Number</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%=h group.course.code %></td>
    <td><%=h group.year %></td>
    <td><%=h group.semester %></td>
    <td><%=h group.number %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

